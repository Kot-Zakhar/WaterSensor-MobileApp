<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/fragment_settings_sensor__realtime__line_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fragment_settings_sensor__borders__linear_layout"
            app:layout_constraintVertical_bias="0"
            android:layout_margin="15dp"
            />

    <LinearLayout
            android:id="@+id/fragment_settings_sensor__borders__linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_settings_sensor__realtime__line_chart"
            app:layout_constraintBottom_toTopOf="@id/fragment_settings_sensor__actions__linear_layout"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintVertical_bias="1"
            >
        <NumberPicker
                android:id="@+id/fragment_settings_sensor__border_min_value__number_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        <NumberPicker
                android:id="@+id/fragment_settings_sensor__border_max_value__number_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/fragment_settings_sensor__actions__linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:visibility="gone"
            >

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/fragment_settings_sensor__actions__save_button"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/fragment_settings_sensor__actions__reset_button"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>