<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/fragment_settings_wifi__wifi_records__list_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_settings_wifi__new_record__layout"
            app:layout_constraintVertical_bias="0"
            >
    </ListView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:id="@+id/fragment_settings_wifi__new_record__layout"
            app:layout_constraintTop_toBottomOf="@id/fragment_settings_wifi__wifi_records__list_view"
            app:layout_constraintBottom_toTopOf="@id/fragment_settings_wifi__add_record__image_button"
            app:layout_constraintVertical_bias="1"
            android:visibility="gone"
            >

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_settings_wifi__new_record__ssid__edit_text"
                    android:hint="Network name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_settings_wifi__new_record__password__edit_text"
                    android:hint="Password"
                    android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
                android:id="@+id/fragment_settings_wifi__new_record__confirm__image_button"
                android:contentDescription="Confirm credentials"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_black"
                android:background="@color/cardview_light_background"
                android:padding="10dp"
                />

    </LinearLayout>

    <ImageButton
            android:contentDescription="Add new wifi credentials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black"
            android:background="@color/cardview_light_background"
            android:id="@+id/fragment_settings_wifi__add_record__image_button"
            app:layout_constraintTop_toBottomOf="@id/fragment_settings_wifi__new_record__layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"
            android:layout_margin="15dp"
            />


</androidx.constraintlayout.widget.ConstraintLayout>